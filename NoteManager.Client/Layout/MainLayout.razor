@inherits LayoutComponentBase
@inject IAuthService authService
@inject NavigationManager navigation

<div class="page d-flex">
    <div class="sidebar bg-primary text-white shadow-lg">
        <NavMenu />
    </div>

    <main class="flex-grow-1">
        <div class="top-row px-4 d-flex justify-content-end align-items-center bg-light shadow-sm">
            <button class="logout-btn d-flex align-items-center" @onclick="OnLogout">
                <i class="bi bi-box-arrow-right me-2"></i> Kilépés
            </button>
        </div>

        <article class="content px-4 py-4">
            @Body
        </article>
    </main>
</div>

@code {
    private async Task OnLogout()
    {
        await authService.Logout();
        navigation.NavigateTo("/");
    }
}